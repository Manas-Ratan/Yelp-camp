<% layout('./layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-md-3 mb-4">
                <form action="/campground" method="post" novalidate class="validated-form"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="campground[title]" id="title" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="campground[location]" id="location" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input type="file" name="image" id="image" class="form-control" required multiple>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price">Rs.</span>
                            <input type="text" name="campground[price]" class="form-control" id="price" placeholder="0"
                                aria-label="price" aria-describedby="price" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description Url</label>
                        <textarea type="text" name="campground[description]" id="description" class="form-control"
                            required></textarea>
                    </div>

                    <div class="mb-3 d-grid gap-2">
                        <button type="submit" class="btn btn-success">Add Campground</button>
                    </div>

                    <footer>
                        <a href="/campground">Go to Main</a>
                    </footer>
                </form>
            </div>
    </div>